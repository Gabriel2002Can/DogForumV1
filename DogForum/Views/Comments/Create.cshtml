@model DogForum.Models.Comments

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Comments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group form-outline" data-mdb-input-init>
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" rows="8"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="hidden" value="@ViewBag.DiscussionsId" name="DiscussionsId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="margin-top:3vh"/>
            </div>
        </form>
    </div>
</div>

<div style="margin-top: 3vh">
    <a asp-controller="Home" asp-action="DiscussionsDetails" asp-route-id="@ViewBag.DiscussionsId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
