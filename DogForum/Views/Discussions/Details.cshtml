@model DogForum.Models.Discussions

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Html.DisplayFor(model => model.Title)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 mb-3">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2 mb-3">
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        @if (!string.IsNullOrEmpty(Model.ImageFilename))
        {
        <dt class="col-sm-2 mb-3">
            @Html.DisplayNameFor(model => model.ImageFile)
        </dt>
        <dd class="col-sm-10 mb-3">
            <img class="rounded mx-auto d-block" src="@Url.Content("/images/" + Model.ImageFilename)" alt="@Model.Title" />

        </dd>
        }
    </dl>
</div>
<div>
    <button type="button" class="btn btn-primary"><a class="text-white no-link-style" asp-action="Edit" asp-route-id="@Model?.DiscussionsId">Edit</a></button>
    <button type="button" class="btn btn-secondary"><a class="text-white no-link-style" asp-action="Index">Back to My Threads</a></button>
</div>
